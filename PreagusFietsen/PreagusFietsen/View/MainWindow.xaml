<Window x:Class="PreagusFietsen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PreagusFietsen"
        mc:Ignorable="d"
        Title="Overview" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="StoresLabel" Content="Stores" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="22" FontFamily="Yu Gothic UI Semibold"/>
        <ListBox x:Name="StoresListBox" ItemsSource="{Binding Stores}" SelectedItem="{Binding SelectedStore}" DisplayMemberPath="City" HorizontalAlignment="Left" Height="155" Margin="10,54,0,0" VerticalAlignment="Top" Width="260"/>
        <Button x:Name="EditStores" Content="Store list" HorizontalAlignment="Left" Margin="101,224,0,0" VerticalAlignment="Top" Width="75" Click="openEditStoreWin"/>
        <Label x:Name="BikesLabel" Content="Bikes" HorizontalAlignment="Center" Margin="439,10,285,0" VerticalAlignment="Top" FontSize="22" FontFamily="Yu Gothic UI Semibold" RenderTransformOrigin="-0.044,0.538" Width="70"/>
        <ListBox x:Name="BikesListBox" ItemsSource="{Binding SelectedStore.Bikes}" DisplayMemberPath="Type" Height="155" Margin="0,54,95,0" VerticalAlignment="Top" Width="260" HorizontalAlignment="Right"/>
        <Button x:Name="EditBikes" Content="Bike list" HorizontalAlignment="right" Margin="0,224,206,0" VerticalAlignment="Top" Width="75" Click="openEditBikeWin"/>
        <ListBox x:Name="ReservationListBox" ItemsSource="{Binding Reservations}" DisplayMemberPath="ID" Height="100" Margin="0,0,524,38" VerticalAlignment="bottom" Width="260" HorizontalAlignment="Right" SelectionChanged="ReservationListBox_SelectionChanged"/>
        <Button x:Name="EditReservations" Content="Reservation list" HorizontalAlignment="Left" Margin="74,0,0,13" VerticalAlignment="bottom" Width="128" Click="openEditReservationWin"/>
        <Label x:Name="BikesLabel_Copy" Content="Reservations" HorizontalAlignment="Center" Margin="10,239,646,0" VerticalAlignment="Top" FontSize="22" FontFamily="Yu Gothic UI Semibold" RenderTransformOrigin="-0.044,0.538" Width="138"/>
    </Grid>
</Window>
